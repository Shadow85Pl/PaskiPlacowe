<UserControl x:Class="PaskiPlacowe.View.LoginV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaskiPlacowe.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel VerticalAlignment="Center" Margin="10">
        <TextBlock Text="Paski Płacowe"></TextBlock>
        <StackPanel>
            <TextBlock Text="Login"></TextBlock>
            <TextBox x:Name="Login" Text="{Binding Login, Mode=TwoWay}"></TextBox>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Hasło"></TextBlock>
            <PasswordBox x:Name="Pass" PasswordChanged="Pass_PasswordChanged"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zaloguj" IsDefault="True" Command="{Binding LogInUser}"></Button>
            <Button Content="Anuluj" Command="{Binding Cancel}" IsCancel="True"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
