<UserControl x:Class="PaskiPlacowe.View.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaskiPlacowe.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Login"></TextBlock>
            <TextBox x:Name="Login"></TextBox>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Hasło"></TextBlock>
            <PasswordBox x:Name="Hasło"></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Zaloguj"></Button>
            <Button Content="Anuluj"></Button>
        </StackPanel>
    </StackPanel>
</UserControl>
